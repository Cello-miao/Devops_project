# Development Dockerfile for backend with hot reload
FROM elixir:1.17-alpine

# Install build dependencies
RUN apk add --no-cache build-base git inotify-tools postgresql-client

WORKDIR /app

# Install hex and rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Copy mix files and install dependencies
COPY mix.exs mix.lock ./
RUN mix deps.get

# Copy source (will be mounted as volume for hot reload)
COPY . .

# Compile dependencies
RUN mix deps.compile

EXPOSE 4000

CMD ["mix", "phx.server"]
